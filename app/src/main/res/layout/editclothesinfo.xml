<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/namebox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignLeft="@+id/nametitle"
        android:layout_alignStart="@+id/nametitle"
        android:layout_below="@+id/nametitle"
        android:background="@drawable/textbox"
        android:hint="Enter name"
        android:textColor="@android:color/darker_gray"
        android:inputType="text" />

    <TextView
        android:id="@+id/nametitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/colortitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Colors"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/namebox"
        android:layout_alignLeft="@+id/namebox"
        android:layout_alignStart="@+id/namebox"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:id="@+id/achromatic"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colortitle"
        android:layout_alignLeft="@+id/colortitle"
        android:layout_alignStart="@+id/colortitle">

        <CheckBox
            android:id="@+id/blackbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/black"/>

        <CheckBox
            android:id="@+id/graybox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/gray"/>

        <CheckBox
            android:id="@+id/whitebox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/white"/>

        <CheckBox
            android:id="@+id/beigebox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/beige"/>

        <CheckBox
            android:id="@+id/taupebox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/taupe"/>

        <CheckBox
            android:id="@+id/brownbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/brown"/>

        <CheckBox
            android:id="@+id/olivebox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/olive"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chromatic"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/achromatic"
        android:layout_alignLeft="@+id/colortitle"
        android:layout_alignStart="@+id/colortitle"
        android:layout_alignRight="@+id/achromatic"
        android:layout_alignEnd="@+id/achromatic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/redbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/red"/>

            <CheckBox
                android:id="@+id/vermilionbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/vermilion"/>

            <CheckBox
                android:id="@+id/orangebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/orange"/>

            <CheckBox
                android:id="@+id/amberbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/amber"/>

            <CheckBox
                android:id="@+id/yellowbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/yellow"/>

            <CheckBox
                android:id="@+id/chartreusebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/chartreuse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/greenbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/green"/>

            <CheckBox
                android:id="@+id/tealbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/teal"/>

            <CheckBox
                android:id="@+id/bluebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/blue"/>

            <CheckBox
                android:id="@+id/violetbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/violet"/>

            <CheckBox
                android:id="@+id/purplebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/purple"/>

            <CheckBox
                android:id="@+id/magentabox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/magenta"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wfll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chromatic"
        android:layout_alignLeft="@+id/chromatic"
        android:layout_alignStart="@+id/chromatic">

        <TextView
            android:id="@+id/weathertitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weathers"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:id="@+id/weatherlist"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/hotbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

            <CheckBox
                android:id="@+id/warmbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warm"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

            <CheckBox
                android:id="@+id/coldbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cold"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

            <CheckBox
                android:id="@+id/rainybox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rainy"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

            <CheckBox
                android:id="@+id/snowybox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snowy"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/formalitytitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formalities"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:id="@+id/formalitylist"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/formalbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formal"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

            <CheckBox
                android:id="@+id/semiformalbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semi-formal"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

            <CheckBox
                android:id="@+id/informalbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informal"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

            <CheckBox
                android:id="@+id/casualbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casual"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/imageselect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/wfll"
        android:layout_toEndOf="@+id/wfll"
        android:layout_below="@+id/chromatic"
        android:layout_alignBottom="@+id/wfll">

        <Button
            android:id="@+id/addimagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Add Image"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/addimagebutton"
            android:layout_toEndOf="@+id/addimagebutton"
            android:src="@mipmap/emptyimg"/>

        <CheckBox
            android:id="@+id/allowbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addimagebutton"
            android:text="Allow"/>

    </RelativeLayout>

    <Button
        android:id="@+id/cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Cancel"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/deletebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>

        <Button
            android:id="@+id/finishbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Finish"/>
    </LinearLayout>

</RelativeLayout>